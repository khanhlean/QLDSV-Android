<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background2nd">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main">
                <Button
                    android:id="@+id/btnClickback"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/main"
                    android:drawableLeft="@drawable/ic_back" />
                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchLTC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:queryHint="Tìm kiếm môn học"
                    app:iconifiedByDefault="false"
                    android:background="@drawable/search"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_loptinchi34"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/main"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Danh sách lớp tín chỉ"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:textColor="@color/main"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Năm học"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="@color/main"
                        android:layout_marginRight="10dp"/>
                    <Spinner
                        android:id="@+id/spinnerNienKhoa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/spinner"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mã LTC"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/main"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Năm học"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/main"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <ListView
            android:id="@+id/listViewLTC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/background2nd">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <Button
                android:id="@+id/btnAddLTC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:text="Thêm"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_plus"
                android:background="@drawable/buttonmain"/>
            <Button
                android:id="@+id/btnDelLTC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:text="Xoá"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_minus"
                android:background="@drawable/mybutton"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
